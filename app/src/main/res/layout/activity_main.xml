<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.n3153r.curso1.MainActivity">

    <Button
        android:text="Boton Texto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:textSize="15dp"
        android:textColor="?android:attr/colorFocusedHighlight"
        android:background="?attr/colorButtonNormal"
        android:visibility="visible"
        android:textAlignment="center"
        android:textStyle="normal|bold|italic"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/btnNuevo" />

    <Button
        android:text="Boton Imagen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:textStyle="normal|bold"
        android:textSize="15dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/ic_launcher"
        android:layout_below="@+id/editText"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Neiser Rodriguez"
        android:id="@+id/textView"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText"
        android:textColor="#272020"
        android:textSize="20dp"
        android:layout_row="2"
        android:layout_column="0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="15dp"
        android:textColor="#ad1212"
        android:layout_row="2"
        android:layout_column="14" />

    <Button
        android:text="Cambiar Texto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button5"
        android:textAllCaps="false"
        android:layout_alignBottom="@+id/editText"
        android:layout_alignRight="@+id/button3"
        android:layout_alignEnd="@+id/button3"
        android:layout_row="7"
        android:layout_column="14" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:hint="Ingresa Algo"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_row="8"
        android:layout_column="0" />

    <Button
        android:text="Ejecutar Toast"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_above="@+id/button3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_row="8"
        android:layout_column="14"
        android:textSize="15dp" />

    <Button
        android:text="Abrir Nueva"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnNuevo"
        android:layout_above="@+id/button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_row="12"
        android:layout_column="14"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:textSize="15dp" />

    <ToggleButton
        android:layout_width="727dp"
        android:layout_height="wrap_content"
        android:textOn="Seleccionado"
        android:textOff="No seleccionado"
        android:id="@+id/toggle"
        android:layout_row="33"
        android:layout_column="0"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/button5"
        android:layout_alignEnd="@+id/button5" />

    <Spinner
        android:layout_width="229dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_alignBottom="@+id/radioGroup"
        android:layout_toRightOf="@+id/editText"
        android:layout_alignRight="@+id/btnNuevo"
        android:layout_alignEnd="@+id/btnNuevo"
        android:layout_row="33"
        android:layout_column="13" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroup"
        android:weightSum="1"
        android:layout_below="@+id/imageView"
        android:layout_alignLeft="@+id/toggle"
        android:layout_alignStart="@+id/toggle"
        android:layout_marginTop="52dp"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView">

        <RadioButton
            android:text="Op 1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton"
            android:checked="false"
            android:layout_gravity="center_vertical" />

        <RadioButton
            android:text="Op 2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton2" />

        <RadioButton
            android:text="Op 3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton3" />

    </RadioGroup>

</RelativeLayout>
